<LoginPageManager>:
    Question1Screen:
        name: "question1"
    CorrectScreen:
        name: "correct"
    ErrorScreen:
        name: "error"
    Question2Screen:
        name: "question2"

<CorrectScreen>:
    Label:
        text: "CORRECT!!!"
    Button:
        size_hint: .5,.2
        text: "WOULD YOU LIKE TO KNOW MORE???"
        pos_hint: {"x":.25}
        #"Looking into this"
        on_release: root.forward()

<ErrorScreen>:
    Label:
        text: "WRONG!!!"
<Question1Screen>:
    orientation: "vertical"
    padding: "15dp"
    Label:
        spacing: "15dp"
        size_hint: 1,.25
        text: "What is the state fruit of Texas?"
        pos_hint: {"x":.0}
        pos_hint: {"y":.75}
    BoxLayout:
        orientation: "horizontal"
        Button:
            text: "Peach"
            size_hint: .2,.75
            on_release: root.answer_question(False)
        Button:
            text: "Orange"
            size_hint: .2,.75
            on_release: root.answer_question(False)
        Button:
            text: "Grapefruit"
            size_hint: .2,.75
            on_release: root.answer_question(True)

<Question2Screen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            spacing: "15dp"
            size_hint: 1,1
            text: "Complete the following verse: \n\n'The stars at night are big and bright,______________"
            pos_hint: {"x":.0}
            pos_hint: {"y":.75}
        TextInput:
            id: answer
            text: "Enter"
            pos_hint: {"x":.25}
            size_hint: .5, .1
        Label:
            text: ""
            id: test
        Button:
            text: "Enter"
            on_release: root.answer_question(answer.text)